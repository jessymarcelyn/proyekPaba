<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212122"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="75dp"
    android:layout_marginBottom="100dp"
    android:orientation="vertical"
    tools:context=".fGym">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Mon\n17 Des"
                />

            <!--                app:strokeColor="#6750A4"-->
            <!--                app:strokeWidth="2dp"-->

            <Button
                android:id="@+id/btnd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Feb\n18 Des" />

            <Button
                android:id="@+id/btnd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Wed\n19 Des" />

            <Button
                android:id="@+id/btnd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Thu\n20 Des" />

            <Button
                android:id="@+id/btnd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Fri\n21 Des" />

            <Button
                android:id="@+id/btnd6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Sat\n21 Des" />

            <Button
                android:id="@+id/btnd7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FFFDFD"
                android:textColor="@color/black"
                android:text="Sun\n22 Des" />

        </LinearLayout>

    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGym"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>