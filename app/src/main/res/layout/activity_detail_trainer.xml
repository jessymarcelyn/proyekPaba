<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212122"
    tools:context=".detailTrainer">

    <EditText
        android:id="@+id/edNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_background_white"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:padding="10sp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background_white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        app:layout_constraintTop_toBottomOf="@+id/edNama" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background_white"
        android:ems="10"
        android:hint="Change Password"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        app:layout_constraintTop_toBottomOf="@+id/edEmail" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#C9F24D"
        android:text="Save"
        android:textColor="@color/black"
        app:cornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        tools:cornerRadius="10sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        android:text="Skill"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/edPassword"
        app:layout_constraintTop_toBottomOf="@+id/edPassword" />

    <CheckBox
        android:id="@+id/cbAtheltic"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:text="Athletic"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/cbSpecial"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:text="Special"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/cbWellness"
        app:layout_constraintTop_toBottomOf="@+id/cbWellness" />

    <CheckBox
        android:id="@+id/cbShape"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:text="Shape"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/cbStrong"
        app:layout_constraintTop_toBottomOf="@+id/cbStrong" />

    <CheckBox
        android:id="@+id/cbStrong"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:text="Strong"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/cbSpecial"
        app:layout_constraintTop_toBottomOf="@+id/cbSpecial" />

    <CheckBox
        android:id="@+id/cbWellness"
        android:layout_width="297dp"
        android:layout_height="41dp"
        android:text="Wellness"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/cbAtheltic"
        app:layout_constraintTop_toBottomOf="@+id/cbAtheltic" />

</androidx.constraintlayout.widget.ConstraintLayout>