<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fEditProfile">

    <EditText
        android:id="@+id/edNama"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="100dp"
        android:background="#C9F24D"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:padding="5sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTinggi"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="#C9F24D"
        android:ems="10"
        android:hint="Tinggi"

        android:inputType="text"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        app:layout_constraintTop_toBottomOf="@+id/edEmail" />

    <EditText
        android:id="@+id/edBerat"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="#C9F24D"
        android:ems="10"
        android:hint="Badan"
        android:inputType="text"

        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        app:layout_constraintTop_toBottomOf="@+id/edTinggi" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="#C9F24D"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"

        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        app:layout_constraintTop_toBottomOf="@+id/edNama" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="338dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="#C9F24D"
        android:ems="10"
        android:hint="Change Password"

        android:inputType="text"
        android:padding="5sp"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edNama"
        app:layout_constraintTop_toBottomOf="@+id/edBerat" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#C9F24D"
        android:text="Save"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edNama"
        app:layout_constraintStart_toStartOf="@+id/edNama" />

</androidx.constraintlayout.widget.ConstraintLayout>