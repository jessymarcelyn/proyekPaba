<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/rounded_background"
    >

    <TextView
        android:id="@+id/tvNameClassOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="AEROBIC"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    <TextView-->
    <!--        android:id="@+id/tvCapacity"-->
    <!--        android:layout_width="103dp"-->
    <!--        android:layout_height="19dp"-->
    <!--        android:text="Easy"-->
    <!--        android:textSize="15sp"-->
    <!--        android:textStyle="bold"-->
    <!--        app:layout_constraintStart_toStartOf="@+id/tvNameClass"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/tvCoach" />-->

    <TextView
        android:id="@+id/tvLevelOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvTimeOC"
        app:layout_constraintStart_toStartOf="@+id/tvTimeOC"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeOC" />

    <TextView
        android:id="@+id/tvCoachOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With Budi"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvNameClassOC"
        app:layout_constraintTop_toBottomOf="@+id/tvNameClassOC" />

    <TextView
        android:id="@+id/tvTimeOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="10:00"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNameClassOC" />

    <Button
        android:id="@+id/btnCancelClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#C9F24D"
        android:text="1 More Left"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTimeOC"
        app:layout_constraintStart_toStartOf="@+id/tvNameClassOC"
        app:layout_constraintTop_toBottomOf="@+id/tvCoachOC" />

</androidx.constraintlayout.widget.ConstraintLayout>