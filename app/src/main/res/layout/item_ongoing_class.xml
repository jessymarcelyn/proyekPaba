<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="8dp"
    >

    <TextView
        android:id="@+id/tvNameClassOC"
        android:layout_width="195dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="AEROBIC"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    <TextView-->
    <!--        android:id="@+id/tvCapacity"-->
    <!--        android:layout_width="103dp"-->
    <!--        android:layout_height="19dp"-->
    <!--        android:text="Easy"-->
    <!--        android:textSize="15sp"-->
    <!--        android:textStyle="bold"-->
    <!--        app:layout_constraintStart_toStartOf="@+id/tvNameClass"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/tvCoach" />-->

    <TextView
        android:id="@+id/tvLevelOC"
        android:layout_width="52dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:text="Easy"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvTimeOC"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeOC" />

    <TextView
        android:id="@+id/tvCoachOC"
        android:layout_width="196dp"
        android:layout_height="36dp"
        android:text="With Budi"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvNameClassOC"
        app:layout_constraintTop_toBottomOf="@+id/tvNameClassOC" />

    <TextView
        android:id="@+id/tvTimeOC"
        android:layout_width="92dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="10:00"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCancelClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="@color/red"
        android:text="CANCEL"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTimeOC"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeOC"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>