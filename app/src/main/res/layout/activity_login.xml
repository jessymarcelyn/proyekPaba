<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212122"
    tools:context=".Login">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="SKYFIT GYM"
        android:textSize="34sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNomor"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nomor Telepon"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="#77FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#77FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/etNomor"
        app:layout_constraintStart_toStartOf="@+id/etNomor"
        app:layout_constraintTop_toBottomOf="@+id/etNomor" />

    <Button
        android:id="@+id/btnLoginTrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#8E8F8A"
        android:enabled="false"
        android:text="Login Trainer"
        android:textColor="@color/black"
        app:cornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="@+id/etPassword"
        app:layout_constraintTop_toTopOf="@+id/btnLoginUser" />

    <Button
        android:id="@+id/btnLoginUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#8E8F8A"
        android:enabled="false"
        android:text="Login User"
        android:textColor="@color/black"
        app:cornerRadius="20sp"
        app:layout_constraintStart_toStartOf="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <TextView
        android:id="@+id/tvGagal"
        android:layout_width="285dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="Login Gagal, Silahkan Ulangi"
        android:textAlignment="center"
        android:textColor="#E82727"
        android:textColorHint="#D31717"
        android:textColorLink="#EA1D1D"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/etPassword"
        app:layout_constraintStart_toStartOf="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginUser" />

</androidx.constraintlayout.widget.ConstraintLayout>